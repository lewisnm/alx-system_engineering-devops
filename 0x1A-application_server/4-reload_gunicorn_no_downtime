#!/bin/bash

# Function to check if Gunicorn is running
is_gunicorn_running() {
    pgrep gunicorn > /dev/null 2>&1
}

# Function to reload Gunicorn gracefully
reload_gunicorn() {
    echo "Reloading Gunicorn gracefully..."
    pkill -HUP gunicorn
}

# Check if Gunicorn is running
if is_gunicorn_running; then
    reload_gunicorn
    echo "Gunicorn reloaded successfully."
else
    echo "Gunicorn is not running."
fi

